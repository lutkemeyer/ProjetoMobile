<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TelaConfiguracoes">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tema"/>

    <Switch
        android:id="@+id/swTemaPadrao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tema Padrão" />

    <Switch
        android:id="@+id/swTemaClaro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tema Claro" />

    <Switch
        android:id="@+id/swTemaEscuro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tema Escuro" />

    <Switch
        android:id="@+id/swTemaCustomizado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tema Customizado" />

    <LinearLayout
        android:id="@+id/containerTemaCustomizado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cor primária"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COR"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>