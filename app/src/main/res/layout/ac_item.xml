<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLight"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/padding_item"
    android:paddingStart="@dimen/padding_item">

    <ImageView
        android:id="@+id/imgLocal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_inicio" />

    <TextView
        android:id="@+id/lblEndereco"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_label_item"
        android:layout_marginStart="@dimen/margin_label_item"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textSize="18sp" />
</LinearLayout>